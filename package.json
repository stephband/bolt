{
  "name": "bolt",
  "description": "A front-end toolkit of classes and evented behaviours.",
  "version": "2.1.0",
  "author": "@stephband",

  "repository": {
    "type": "git",
    "url": "https://github.com/stephband/bolt.git"
  },

  "bugs": {
    "url": "https://github.com/stephband/bolt/issues/"
  },

  "license": "MIT",

  "devDependencies": {
    "clean-css":    "^4.2.3",
    "eslint":       "^6.5.1",
    "http-server":  "^0.12.1",
    "node-sass":    "^4.13.1",
    "puppeteer":    "^1.20.0",
    "rollup":       "^1.32.1"
  },

  "scripts": {
    "lint":         "eslint ./*.js",
    "serve":        "npx http-server ../ -p 8080 &",
    "serve-kill":   "kill $(lsof -t -i:8080)",
    "build-sass":   "node-sass --output-style compact --indent-width 4 ./sass/grid.scss ./css/grid.css && node-sass --output-style compact --indent-width 4 ./sass/respond.scss ./css/respond.css",
    "build-css":    "npm run build-sass && node build-css.js dist/bolt.min.css",
    "build-module": "rollup ./module.js --o dist/bolt.module.js --f esm",
    "build-docs":   "npm run serve && node ../fn/render-html.js http://127.0.0.1:8080/bolt/index.template.html ./index.html 4 && npm run serve-kill",
    "publish":      "git pull origin master && npm run build-css && npm run build-module && git add --all && git commit -am 'Builds version 2.1.0' && git push"
  },

  "style": [
    "css/html.css",
    "css/svg.css",
    "css/root.css",
    "css/body.css",
    "css/fonts.css",
    "css/type.css",
    "css/content.css",
    "css/input.css",
    "css/label.css",
    "components/check-label.css",
    "components/switch-label.css",
    "css/button.css",
    "components/check-button.css",
    "components/menu-button.css",
    "components/select-button.css",
    "components/toggle-button.css",
    "components/pill-input.css",
    "css/thumb.css",
    "css/progress.css",
    "css/table.css",
    "css/index.css",
    "components/crumbs-index.css",
    "css/layer.css",
    "css/badge.css",
    "components/bubble.css",
    "css/card.css",
    "css/block.css",
    "css/slides.css",
    "css/color.css",
    "css/text.css",
    "css/modifiers.css",
    "css/respond.css",
    "css/grid.css",
    "css/device.css",
    "css/var.css"
  ]
}
